<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CardPageView">
        <!-- the margin between two card -->
        <attr name="cardMargin" format="dimension" />
        <!-- the card width ratio related to the screen width -->
        <attr name="widthScreenRatio" format="float" />
        <!-- the card height ratio related to the width of card -->
        <attr name="heightWidthRatio" format="float" />
        <!-- the scale ratio between current select card and it's prev or next card -->
        <attr name="cardScaleRatio" format="float" />
    </declare-styleable>
</resources>